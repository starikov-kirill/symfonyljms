{% extends 'LjmsGeneralBundle:Admin/Include:user_form.html.twig' %}
{% block page_name %}Add User{% endblock %}

{% block passwordError%}
	{{ form_errors(form.password.first) }}
	{{ form_errors(form.password.second) }}
{% endblock %}

{% block passwordfield%}
	<div class="hilf_width_col">{{ form_label(form.password.first, 'Password *')}}</div>
	<div class="hilf_width_col"> {{ form_widget( form.password.first ) }}</div>
{% endblock %}

{% block passwordrepeatfield%}
	<div class="hilf_width_col">{{ form_label(form.password.second, 'Password Confirm')}}</div>
	<div class="hilf_width_col">{{ form_widget(form.password.second) }}</div>
{% endblock %}